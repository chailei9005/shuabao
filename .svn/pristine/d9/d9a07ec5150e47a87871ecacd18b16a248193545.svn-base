<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/item_line_margin_top"
    android:background="@color/white"
    android:layout_height="wrap_content"
    android:id="@+id/rlAddress">


    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/textPublishPriceLable"
        android:text="@string/publish_tresure_price"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/abc_action_bar_content_inset_material"
        android:textColor="@color/abc_primary_text_material_light" />

    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/colorAccent"
        android:text="2500"
        android:id="@+id/textPublishPrice"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/ibtnWeChatForward"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/abc_action_bar_content_inset_material" />

</RelativeLayout>