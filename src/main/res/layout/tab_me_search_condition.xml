<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:id="@+id/llSearchCondition"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:background="@color/transparent"
            android:src="@drawable/tab_me_menu"
            android:layout_height="wrap_content"
            android:padding="@dimen/abc_action_bar_overflow_padding_start_material" />

        <TextView
            android:layout_width="wrap_content"
            android:text="全部"
            android:layout_height="wrap_content"
            android:id="@+id/textSearch" />


        <ImageView
            android:layout_width="wrap_content"
            android:background="@color/transparent"
            android:src="@drawable/tab_me_open"
            android:layout_height="wrap_content"
            android:padding="@dimen/abc_action_bar_overflow_padding_start_material" />

    </LinearLayout>


    <View
        android:layout_width="1dp"
        android:background="@color/dim_foreground_disabled_material_dark"
        android:layout_height="match_parent" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rlSearch"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:hint="@string/edit_search_hint"
            android:layout_height="wrap_content"
            android:background="@drawable/search_input"
            android:textColor="@color/bright_foreground_disabled_material_light"
            android:id="@+id/editSearch"
            android:paddingTop="@dimen/edit_search_image"
            android:paddingBottom="@dimen/edit_search_image"
            android:paddingRight="@dimen/edit_search_text_hint"
            android:textColorHint="@color/bright_foreground_disabled_material_light"
            android:paddingLeft="@dimen/abc_button_padding_horizontal_material"
            android:singleLine="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/input_seach"
            android:id="@+id/ibtnSearch"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/edit_search_image"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

</LinearLayout>