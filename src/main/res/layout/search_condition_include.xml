<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:id="@+id/llSearchCondition"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:id="@+id/llTresureType"
        android:padding="@dimen/abc_action_bar_content_inset_material"
        android:gravity="center"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:text="@string/search_condition_text_type"
            android:layout_height="wrap_content"
            android:id="@+id/textType" />

        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/img_search_condition_down_normal"
            android:background="@color/transparent"
            android:layout_height="wrap_content"
            android:padding="@dimen/abc_action_bar_overflow_padding_start_material" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:id="@+id/llTresurePrice"
        android:padding="@dimen/abc_action_bar_content_inset_material"
        android:gravity="center"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:text="@string/search_condition_text_price"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:padding="@dimen/abc_action_bar_overflow_padding_start_material">

            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/img_search_condition_down_normal"
                android:background="@color/transparent"
                android:layout_height="wrap_content"
                android:id="@+id/imgPriceUp" />

            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/img_search_condition_down_normal"
                android:background="@color/transparent"
                android:layout_height="wrap_content"
                android:id="@+id/imgPriceDown" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:id="@+id/llTresureHot"
        android:padding="@dimen/abc_action_bar_content_inset_material"
        android:gravity="center"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:text="@string/search_condition_text_hot"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/img_search_condition_down_normal"
            android:background="@color/transparent"
            android:layout_height="wrap_content"
            android:padding="@dimen/abc_action_bar_overflow_padding_start_material" />

    </LinearLayout>

</LinearLayout>